<h1>Listing words</h1>
<%= link_to 'New word', new_word_path %>
<table>
  <tr>
    <th>Lexical Form</th>
  </tr>
  <% @words.each do |word| %>
  <tr>
    <td><%= word.lexical_form %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word_path(word), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>
