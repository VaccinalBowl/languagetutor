<%= form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :teaches, :class => 'control-label' %>
  <div class="controls">
    <%= f.select :teaches, ['Chinese','English','French'] , class: 'select' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :for_speakers_of, :class => 'control-label' %>
  <div class="controls">
    <%= f.select :for_speakers_of, ['Chinese','English','French'] , class: 'select' %>
  </div>
</div>



<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  courses_path, :class => 'btn' %>
</div>
<% end %>
